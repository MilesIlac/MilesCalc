<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingBottom="15dp">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="540dp"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintEnd_toEndOf="@id/btn0"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="540dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDot"
        app:layout_constraintEnd_toEndOf="@+id/btnDot"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="540dp"
        app:layout_constraintEnd_toEndOf="@+id/btnEquals"
        app:layout_constraintBottom_toTopOf="@+id/btnEquals"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="492dp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toEndOf="@id/btn0"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="492dp"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="@+id/btnDot"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="492dp"
        app:layout_constraintEnd_toEndOf="@+id/btnEquals"
        app:layout_constraintBottom_toTopOf="@+id/btn3"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="444dp"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintEnd_toEndOf="@id/btn0" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="444dp"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintEnd_toEndOf="@+id/btnDot"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="444dp"
        app:layout_constraintEnd_toEndOf="@+id/btnEquals"
        app:layout_constraintBottom_toTopOf="@+id/btn6"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDot"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:onClick="onClick"
        app:layout_constraintEnd_toStartOf="@+id/btnEquals"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="588dp" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="396dp"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintEnd_toEndOf="@id/btn0"/>

    <Button
        android:id="@+id/btnParenthesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="()"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="396dp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toEndOf="@+id/btnDot"/>

    <Button
        android:id="@+id/btnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="396dp"
        app:layout_constraintEnd_toEndOf="@+id/btnEquals"
        app:layout_constraintBottom_toTopOf="@+id/btn9"/>

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:onClick="onClick"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"
        app:layout_constraintStart_toEndOf="@+id/btnDot"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="588dp" />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="396dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDiv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="444dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMult"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnMult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="492dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubt"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSubt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="540dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="588dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@id/btnQuit"
        app:layout_constraintEnd_toEndOf="@id/btnQuit">

        <TextView
            android:id="@+id/txtViewBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50sp"
            android:maxLines="1"
            tools:layout_editor_absoluteX="334dp"
            tools:layout_editor_absoluteY="287dp"
             />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/txtViewSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/scroll"
        app:layout_constraintEnd_toEndOf="@id/scroll" />

</androidx.constraintlayout.widget.ConstraintLayout>