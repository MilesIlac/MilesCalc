<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0D161D"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp"
    tools:context=".view.MainActivity">

    <TableLayout
        android:id="@+id/CalcTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        app:layout_constraintBottom_toBottomOf="parent">

            <TableRow
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/modulo"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnParenthesis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/parentheses"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/clear"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnQuit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/quit"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </TableRow>

            <TableRow
                android:layout_marginBottom="5dp"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/seven"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/eight"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />


                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/nine"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/divide"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </TableRow>

            <TableRow
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/four"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/five"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/six"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnMult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/multiply"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/one"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/two"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/three"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnSubt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/minus"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />
            </TableRow>

            <TableRow
                android:gravity="center">

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/zero"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/dot"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnEquals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/equals"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0d161d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/plus"
                    android:textColor="#56c2f0"
                    app:strokeColor="#56c2f0"
                    app:strokeWidth="2dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </TableRow>

        </TableLayout>


    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/CalcTableLayout"
        app:layout_constraintEnd_toEndOf="@id/CalcTableLayout">

        <TextView
            android:id="@+id/txtViewBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/zero"
            android:textColor="@color/white"
            android:textSize="50sp" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/txtViewSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="@string/zero"
        android:textColorHint="#2d83a8"
        android:textSize="20sp"
        android:textColor="#2d83a8"
        app:layout_constraintBottom_toTopOf="@id/scroll"
        app:layout_constraintEnd_toEndOf="@id/scroll"/>


</androidx.constraintlayout.widget.ConstraintLayout>